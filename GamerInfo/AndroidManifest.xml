        <activity
            android:name="com.example.gamerinfo.ReviewWeb"
            android:label="@string/title_activity_review_web" >
        </activity>
        <activity
            android:name="com.example.gamerinfo.MyWishList"
            android:label="@string/title_activity_my_wish_list" >
        </activity>
        <activity
            android:name="com.example.gamerinfo.PublicWishlist"
            android:label="@string/title_activity_public_wishlist" >
        </activity>
        <activity
            android:name="com.example.gamerinfo.GameStoreSearch"
            android:label="@string/title_activity_game_store_search" >
