        <activity
            android:name="com.example.gamerinfo.StoresList"
            android:label="@string/title_activity_stores_list" >
        </activity>
        <activity
            android:name="com.example.gamerinfo.GameStoreWeb"
            android:label="@string/title_activity_game_store_web" >
        </activity>
    </application>

</manifest>
