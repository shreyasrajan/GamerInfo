        <activity
            android:name="com.example.gamerinfo.ReviewSearch"
            android:label="@string/title_activity_review_search" >
        </activity>
        <activity
            android:name="com.example.gamerinfo.GameReviews"
            android:label="@string/title_activity_game_reviews" >
