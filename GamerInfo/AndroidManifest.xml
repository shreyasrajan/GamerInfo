        <activity
            android:name="com.example.gamerinfo.GameSearch"
            android:label="@string/title_activity_game_search" >
        </activity>
        <activity
            android:name="com.example.gamerinfo.UserConfig"
            android:label="@string/title_activity_user_config" >
        </activity>
        <activity
            android:name="com.example.gamerinfo.GamesList"
            android:label="@string/title_activity_games_list" >
        </activity>
        <activity
            android:name="com.example.gamerinfo.GameDetails"
            android:label="@string/title_activity_game_details" >
